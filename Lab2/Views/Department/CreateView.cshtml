
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create Department</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col">
                <form action="/department/create" method="post">
                    <div class="form-group">
                        <label for="dept_id">Dept ID: </label>
                        <input type="number" class="form-control" name="dept_id" />
                    </div>
                    <div class="form-group">
                        <label class="col-form-label">Dept Name: </label>
                        <input type="text" class="form-control" name="dept_name" />
                    </div>
                        <input class="btn btn-primary" type="submit" value="Add Dept" />
                </form>
            </div>
        </div>
    </div>
</body>
</html>
