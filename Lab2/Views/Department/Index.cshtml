@model IEnumerable<Department>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Departments</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container my-3">
        <div class="row">
            <div class="col">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Dept Name</th>
                            <th>Edit</th>
                            <th>Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Count() > 0)
                        {
                            foreach (var item in Model)
                            {
                        <tr>
                            <td>@item.Dept_id</td>
                            <td>@item.Dept_name</td>
                            <td><a class="btn btn-info" href="/department/editview/@item.Dept_id">Edit</a></td>
                            <td><a class="btn btn-danger" href="/department/delete/@item.Dept_id" onclick="return confirm('Are you sure you want to delete?')">Delete</a></td>
                        </tr>
                            }
                        }

                    </tbody>
                </table>
                <a class="btn btn-primary" href="/department/createview">Add a Department</a>
            </div>
        </div>
    </div>
</body>
</html>
